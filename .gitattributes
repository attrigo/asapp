# Set default behavior to automatically normalize line endings
* text=auto

# Java source files
*.java text eol=lf
*.kt text eol=lf
*.kts text eol=lf

# Configuration files
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.properties text eol=lf
*.json text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Shell scripts
*.sh text eol=lf

# SQL files
*.sql text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.ts text eol=lf


# Binary files
*.jar binary
*.war binary
*.class binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
